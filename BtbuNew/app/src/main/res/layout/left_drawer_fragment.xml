<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_slidingmenu"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.0"
        android:minHeight="102.0dip"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="15.0dip"
            android:layout_marginTop="30.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/left_drawer_avatar_size"
                android:layout_height="@dimen/left_drawer_avatar_size"
                android:layout_marginLeft="32.0dip"
                android:layout_marginRight="16.0dip"
                android:background="@drawable/round_avatar_bg"
                android:padding="1.0dip" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/left_drawer_user_name"
                android:textSize="16.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/logout_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.0"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16.0dip"
            android:layout_marginTop="34.0dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/qzone_rl_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_drawer_qzone" />

            <ImageView
                android:id="@+id/weibo_rl_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:src="@drawable/ic_drawer_weibo" />

            <ImageView
                android:id="@+id/tencent_rl_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_drawer_tencent" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13.0dip"
            android:text="@string/left_drawer_no_login_tip"
            android:textColor="@color/left_drawer_no_login_tip_text"
            android:textSize="11.0sp" />
    </LinearLayout>

    <ImageView style="@style/left_drawer_item_line" />

    <ScrollView
        android:layout_width="fill_parent"
        android:scrollbars="none"
        android:cacheColorHint="#00000000"
        android:stretchMode="columnWidth"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/pgc_rl_btn"
                style="@style/left_drawer_item_layout" 
                android:visibility="gone">

                <TextView
                    android:id="@+id/pgc_name"
                    style="@style/left_drawer_item_text"
                    android:drawableLeft="@drawable/ic_drawer_pgc" />
            </RelativeLayout>

            <ImageView style="@style/left_drawer_item_line" />

            <!-- 计信学院 -->
            <RelativeLayout
                android:id="@+id/jixin_rl_btn"
                style="@style/left_drawer_item_layout" >
                <TextView
                    style="@style/left_drawer_item_text"
                    android:drawableLeft="@drawable/ic_drawer_search"
                    android:text="@string/left_item_ComputerInformationEngineer" />
            </RelativeLayout>

            <ImageView style="@style/left_drawer_item_line" />

            <RelativeLayout
                android:id="@+id/jingji_rl_btn"
                style="@style/left_drawer_item_layout" >

                <TextView
                    style="@style/left_drawer_item_text"
                    android:drawableLeft="@drawable/ic_drawer_favorite"
                    android:text="@string/left_item_Economics" />
            </RelativeLayout>

            <ImageView style="@style/left_drawer_item_line" />

            <RelativeLayout
                android:id="@+id/shang_rl_btn"
                style="@style/left_drawer_item_layout" >

                <TextView
                    android:id="@+id/shang_text"
                    style="@style/left_drawer_item_text"
                    android:drawableLeft="@drawable/ic_drawer_message"
                    android:text="@string/left_item_Business" />

                <TextView
                    android:id="@+id/top_message_count"
                    style="@style/left_drawer_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="25.0dip"
                    android:layout_marginTop="6.0dip"
                    android:layout_toRightOf="@id/shang_text"
                    android:background="@drawable/left_drawer_count_bg" />
            </RelativeLayout>

            <ImageView style="@style/left_drawer_item_line" />

            <RelativeLayout
                android:id="@+id/offline_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/li_rl_btn"
                    style="@style/left_drawer_item_layout" >

                    <ImageView
                        android:id="@+id/offline_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25.0dip"
                        android:src="@drawable/ic_drawer_offline" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/offline_icon"
                        android:minHeight="50.0dip" >

                        <TextView
                            android:id="@+id/offline_rl_btn_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14.0dip"
                            android:text="@string/left_item_btbu_lxy"
                            android:textColor="@color/left_drawer_item_text"
                            android:textSize="15.0sp" />

                        <TextView
                            android:id="@+id/offline_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/offline_rl_btn_text"
                            android:layout_marginTop="2.0dip"
                            android:textColor="@color/left_drawer_offline_hint"
                            android:textSize="7.0sp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/offline_progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/li_rl_btn"
                    android:src="@drawable/left_drawer_download"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/offline_divider"
                style="@style/left_drawer_item_line" />

            <LinearLayout
                android:id="@+id/app_activity_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="50.0dip"
                android:orientation="vertical"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/shipin_rl_btn"
                    style="@style/left_drawer_item_layout" >

                    <TextView
                        android:id="@+id/app_activity_text"
                        style="@style/left_drawer_item_text"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/left_drawer_activity_selector"
                        android:text="@string/left_item_FoodandChemicalEngineering" />

                    <TextView
                        android:id="@+id/top_appactivity_count"
                        style="@style/left_drawer_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="25.0dip"
                        android:layout_marginTop="6.0dip"
                        android:layout_toRightOf="@id/app_activity_text"
                        android:background="@drawable/left_drawer_count_bg" />
                    
                    <!-- 法马学院 -->
                </RelativeLayout>

                <ImageView style="@style/left_drawer_item_line" />

                <RelativeLayout
                    android:id="@+id/caiji_rl_btn"
                    style="@style/left_drawer_item_layout" >

                    <TextView
                        android:id="@+id/app_btbu_fmy"
                        style="@style/left_drawer_item_text"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/left_drawer_activity_selector"
                        android:text="@string/left_item_MaterialsandEngincering" />

                    <TextView
                        style="@style/left_drawer_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="25.0dip"
                        android:layout_marginTop="6.0dip"
                        android:layout_toRightOf="@id/app_btbu_fmy"
                        android:background="@drawable/left_drawer_count_bg" />
                </RelativeLayout>

                <ImageView style="@style/left_drawer_item_line" />
                
                <!-- 设置 -->
                <RelativeLayout
                    android:id="@+id/fa_rl_btn"
                    style="@style/left_drawer_item_layout" >

                    <TextView
                        android:id="@+id/app_activity_text2"
                        style="@style/left_drawer_item_text"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/left_drawer_activity_selector"
                        android:text="@string/left_item_btbu_fmy" />

                    <TextView
                        android:id="@+id/top_appactivity_count2"
                        style="@style/left_drawer_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="25.0dip"
                        android:layout_marginTop="6.0dip"
                        android:layout_toRightOf="@id/app_activity_text2"
                        android:background="@drawable/left_drawer_count_bg" />
                </RelativeLayout>

                <ImageView style="@style/left_drawer_item_line" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/setting_rl_btn"
                style="@style/left_drawer_item_layout" >

                <TextView
                    style="@style/left_drawer_item_text"
                    android:drawableLeft="@drawable/ic_drawer_setting"
                    android:text="@string/left_drawer_item_setting" />
            </RelativeLayout>

            <ImageView style="@style/left_drawer_item_line" />

            <RelativeLayout
                android:id="@+id/feedback_rl_btn"
                style="@style/left_drawer_item_layout" >

                <TextView
                    style="@style/left_drawer_item_text"
                    android:drawableLeft="@drawable/ic_drawer_feedback"
                    android:text="@string/left_drawer_item_feedback" />
            </RelativeLayout>

            <ImageView style="@style/left_drawer_item_line" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="19.0dip"
        android:layout_weight="0.0"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

     <!--   <collect.meicai.com.collect.app.view.SwitchButton
            android:id="@+id/night_mode_rl_btn"
            style="@style/Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />-->

        <!-- myapp:thumb="@drawable/wiper_switch_slipper_rl_btn" -->
        <!-- myapp:track="@drawable/wiper_switch_rl_btn" -->

        <TextView
            android:id="@+id/night_mode_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:textColor="@color/left_drawer_night_mode_text"
            android:textSize="15.0sp" />
    </LinearLayout>

</LinearLayout>